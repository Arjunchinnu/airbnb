<%- layout('./layouts/boilerplate') %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h2>Add details</h2>

      <form
        action="/listings"
        method="post"
        class="needs-validation"
        novalidate
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            placeholder="enter title"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title look's good</div>
          <div class="invalid-feedback">Please enter Title</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">description</label>
          <textarea
            type="text"
            class="form-control"
            name="listing[description]"
            placeholder="enter description title"
            required
          ></textarea>
          <div class="invalid-feedback">Please enter valid description</div>
        </div>

        <!-- <div class="mb-3">
          <label for="image" class="form-label">Image url</label>
          <input
            type="text"
            class="form-control"
            name="listing[image][url]"
            placeholder="Enter image URL"
          />
        </div> -->

        <div class="mb-3">
          <label for="image" class="form-label">Upload Listing Image</label>
          <input
            type="file"
            class="form-control"
            name="listing[image]"
            required
          />
        </div>

        <div class="row">
          <div class="mb-3 col-4">
            <label for="price" class="form-label">Price</label>
            <input
              type="number"
              class="form-control"
              name="listing[price]"
              placeholder="enter price"
              required
            />
            <div class="invalid-feedback">Please enter valid price</div>
          </div>
          <div class="mb-3 col-8">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              class="form-control"
              name="listing[country]"
              placeholder="enter country"
              required
            />
            <div class="invalid-feedback">valid country shoulr be entered</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label">location</label>
          <input
            type="text"
            class="form-control"
            name="listing[location]"
            placeholder="enter location"
            required
          />
          <div class="invalid-feedback">valid location should be entered</div>
        </div>

        <div class="mb-3">
          <button type="submit" class="add-btn btn btn-dark">Add</button>
        </div>
        <br />
        <br />
      </form>
      <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"
      ></script>
      <script src="/js/valid.js"></script>
    </div>
  </div>
</body>
