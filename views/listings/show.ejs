<%- layout('./layouts/boilerplate') %>

<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>"
  console.log(mapToken);
  
</script>
<div class="row">
  <div class="col-8 offset-3 mt-3">
    <h2><%= list.title %></h2>
  </div>

  <div class="col-6 offset-3 show-card">
    <div class="card listing_card card_out">
      <img
        src="<%= list.image.url %>"
        class="card-img-top show-img"
        alt="listing-image"
      />
      <div class="card-body">
        <p class="card-text">
        <p> Owned by <%= list.owner.username %></p>
          <p><%= list.description %></p>
         <p> &#8377;<%= list.price.toLocaleString('en-IN') %></p>
          <p><%= list.location %></p>
          <p><%= list.country %></p>
        </p>
      </div>
    </div>
  </div>
</div>
<div class="row align-items-center">
<% if (currUser && currUser._id.toString() === list.owner._id.toString()) { %>
  <div class="col-auto me-2 offset-3">
    <form action="/listings/<%= list._id %>/edit">
      <button type="submit" class="btn edit-btn editing-btn">Edit</button>
    </form>
  </div>

  <div class="col-auto">
    <form action="/listings/<%= list._id %>?_method=DELETE" method="post">
      <button type="submit" class="btn btn-dark deleting-btn">Delete</button>
    </form>
  </div>
<% } %>

  <hr />
  <div class="col-8 offset-3 mb-3">
    <% if(currUser){ %>
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%= list.id %>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <!-- <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          min="1"
          max="5"
          step="1"
          class="form-range"
          value="1"
          name="review[rating]"
        />
      </div> -->

       <div class="mb-3 mt-3">
<fieldset class="starability-slot">
   <!-- <label for="rating" class="form-label">Rating</label> -->
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
</div>

      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="30"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Pleace add any comments</div>
      </div>
      <button type="submit" class="btn btn-outline-dark">Sumbit</button>
    </form>
    <% } %>


    <ul>
      <div class="row">
        <% if(list.reviews.length > 0) {%>
              <hr />
         <p><b>All Reviews</b></p>
         <% } %>
        <% for(review of list.reviews){ %>
        <div class="card col-5 ms-3 mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= review.author.username  %></h5>
            <p class="card-text"><%= review.comment %></p>
  <p class="starability-result card-text" data-rating="<%= review.rating  %>"></p>
          </div>
          <form
            action="/listings/<%= list._id %>/reviews/<%= review._id %>?_method=DELETE"
            class="mb-3 mt-2"
            method="POST"
          >
            <button class="btn btn-dark btn-sm" type="submit">Delete</button>
          </form>
        </div>
        <% } %>
      </div>
    </ul>


    <div id="map" style="width: 100%; height: 400px;"></div>

    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<script src="https://unpkg.com/@mapbox/polyline/dist/polyline.min.js"></script>

<script src="/js/map.js"></script>


